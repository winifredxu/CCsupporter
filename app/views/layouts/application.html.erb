<!DOCTYPE html>
<html>
	<head>
	  <title>Quiz1 - Supporter</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>

	<body>
		<h1><%= link_to "Support Requests", requests_path %></h1>
		<hr>

		<ul class="nav nav-pills">
		  <li role="presentation"><%= link_to "Home", requests_path %></li>
		  <li role="presentation"><%= link_to "New request", new_request_path %></li>
		  <li role="presentation"><%= link_to "All requests", requests_path %></li>

		  <li role="presentation" style="float: right">
				<%= form_tag("/search", method: "get") do %>
			  	<%= label_tag(:q, "Search for:") %>
			  	<%= text_field_tag(:q) %>
			  	<%= submit_tag("Search") %>
				<% end %>	
			</li>
		</ul>

		<%= yield %>

	</body>
</html>
