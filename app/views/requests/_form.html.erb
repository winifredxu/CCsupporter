<% if @request.errors.any? %>
	<ul>
	<% @request.errors.full_messages.each do |req| %>
		<li><%= req %></li>
	<% end %>
	</ul>
<% end %>


<%= form_for @request do |f| %>
  <div class="form-group">
	<%= f.label :name %>*
	<%= f.text_field :name, class: "form-control" %>
</div>

	<%= f.label :email %>*
	<%= f.text_field :email, class: "form-control" %>
	
	<%#= f.label :dept %>     <!--to change the label display text -->
	<%= f.label "Department" %>  
	<%= f.radio_button :dept, "Sales" %> Sales
	<%= f.radio_button :dept, "Marketing", :checked => true %> Marketing
	<%= f.radio_button :dept, "Technical" %> Technical

		<!-- trying out the radio_button_tag form helper instead below: -->
		<!--
		<%= label("request[dept]", "Department") %> 
		<%= radio_button_tag("request[dept]", "Sales") %>
		<%= label_tag(:dept, "Sales") %>
		<%= radio_button_tag("request[dept]", "Marketing") %>
		<%= label_tag(:dept, "Marketing") %>
		<%= radio_button_tag("request[dept]", "Technical", true) %>
		<%= label_tag(:dept, "Technical") %>
		-->
	
	<%= f.label "Message" %>
	<%= f.text_area :body, class: "form-control" %>
	
	<%= f.submit value: "Save"%>

<% end %>
